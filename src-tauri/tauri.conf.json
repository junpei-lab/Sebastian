{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sebastian",
  "version": "0.1.0",
  "identifier": "com.example.sebastian",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sebastian",
        "width": 960,
        "height": 640,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray_icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"]
  }
}
